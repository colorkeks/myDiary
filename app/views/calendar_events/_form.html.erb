<%= simple_form_for(@calendar_event, remote: request.xhr?, html: {data: {modal: true}, class: 'form-horizontal'}) do |f| %>
    <% if @calendar_event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@calendar_event.errors.count, "error") %> prohibited this calendar_event from being
            saved:</h2>

          <ul>
            <% @calendar_event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.input :title, input_html: {class: 'form-control'} %>

    <%= f.input :all_day, input_html: {class: 'form-control'} %>

    <!--TODO DATETIME PICKER-->
    <%= f.input :start_date, input_html: {class: 'form-control'} %>
    <!--TODO DATETIME PICKER-->
    <%= f.input :end_date, input_html: {class: 'form-control'} %>

    <div class="actions">
      <%= f.submit  class: 'btn btn-primary' %>
      <% if params[:action] == 'edit'%>
          <%= link_to 'Destroy', @calendar_event, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
<% end %>
